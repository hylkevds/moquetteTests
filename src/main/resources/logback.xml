<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%16thread] %-5level %30logger{30} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.moquette.broker.metrics.MQTTMessageLogger" level="WARN"/>
    <logger name="io.moquette.broker.PostOffice" level="INFO"/>
    <logger name="io.moquette.broker.MQTTConnection" level="WARN"/>
    <logger name="io.moquette.broker.NewNettyMQTTHandler" level="OFF"/>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
